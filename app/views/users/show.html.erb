<!-- listing 7.10 -->
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>

    <!-- listing 14.23 - follower statistics -->
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>

  </aside>

<!-- listing 13.24
	adding microposts
-->

  <div class="col-md-8">

    <!-- listing 14.23 - follow form -->
    <%= render 'follow_form' if logged_in? %>

    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>

</div>
